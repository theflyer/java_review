package Assignment4;

public class RegularCourseCertification extends RRTechnicalCertification implements Certification {

	private int courseDuration;
	
	RegularCourseCertification(String name, String course, int marks, int duration){
		super(name,course,marks);
		this.courseDuration=duration;
	}
	
	
	public void setCourseDuration(int courseDuration) {
		this.courseDuration = courseDuration;
	}


	public int getCourseDuration() {
		return courseDuration;
	}
	
	@Override
	public void generateRegistrationId(){
		super.counter+=1;
		super.setReg_id(super.counter);
		
	}
	
	@Override
	public double calculateFee(){
		double discount = 0.0;
		if(super.getAdmissionTestMark() > 90){
			discount = (10/100);
		}else if (super.getAdmissionTestMark() >=75 && super.getAdmissionTestMark() <= 89){
			discount= (5/100);
		}
		
		double total = REG_COURSE_FEE*this.courseDuration - REG_COURSE_FEE*discount;
		
		return total;
	}
	
	public void Display(){
		double fee = calculateFee();
		this.generateRegistrationId();
		System.out.println("*****************Regular Course Registration Details *******************");
		System.out.println("Student Name:" + super.getStudentName());
		System.out.println("Course Name: "+ super.getCourseName());
		System.out.println("Course Duration: "+ this.courseDuration+" months.");
		System.out.println("Registration ID: " + super.getReg_id());
		System.out.println("Fees: "+ fee);
	}
	public static void main(String[] args) {
		// TODO Auto-generated method stub

	}

}
